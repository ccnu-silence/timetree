<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <include   layout="@layout/header_layout"/>
     
     <FrameLayout   
         android:layout_width="match_parent"
         android:layout_height="match_parent">
   <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_70_dip"
         android:background="@color/service_pointbg"
         android:orientation="horizontal"
         android:gravity="center_vertical" >
      <ImageView 
          android:layout_width="@dimen/dimen_24.5_dip"
          android:layout_height="@dimen/dimen_23_dip" 
          android:src="@drawable/pointexchange_gift"
          android:layout_marginLeft="@dimen/dimen_20_dip"
          />   
      <TextView      
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/txtSize_17_sp"
         android:textColor="@color/grey"
         android:paddingTop="@dimen/dimen_20_dip"
         android:paddingBottom="@dimen/dimen_20_dip"
         android:paddingLeft="@dimen/dimen_10_dip"
         android:paddingRight="@dimen/dimen_10_dip"
         android:text="@string/service_mypoint" />
       <TextView      
         android:id="@id/service_pointexchange_pointtv"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center"
         android:textSize="@dimen/txtSize_27_sp"
         android:textColor="@color/service_pointcolor"
         />
       <TextView      
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center"
         android:layout_marginLeft="@dimen/dimen_5_dip"
         android:text="分"
         android:textSize="@dimen/txtSize_20_sp"
         android:textColor="@color/grey"
         />
     </LinearLayout>
       <View  style="@style/viewlinestyle"/>     
    <LinearLayout             
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"      
          android:orientation="vertical"
          android:layout_marginBottom="@dimen/dimen_10_dip" 
          android:gravity="center" >
     <ListView    
        android:id="@id/service_pointexchange_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        style="@style/contactsexpandlistview"
        />   
          <View android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="@color/contactbackgroud"/>
      </LinearLayout>
    </LinearLayout>
    
        <RelativeLayout  android:id="@+id/point_exchange_poply" android:clipChildren="false" android:clipToPadding="false" android:layout_width="fill_parent" 

android:layout_height="fill_parent"  android:background="@color/popbg" android:visibility="gone" >
        <LinearLayout android:orientation="horizontal" android:id="@id/first_line_menu" android:layout_width="fill_parent" android:layout_height="@dimen/dimen_100_dip"  

android:background="@color/white">
          
         <LinearLayout android:id="@+id/service_pointexchange_adddressbookly" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0.0dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/btn_white_select">
             
             <ImageView android:layout_width="@dimen/dimen_40_dip" android:layout_height="@dimen/dimen_40_dip" android:src="@drawable/service_addressbook"/>
             <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="地址本" android:textSize="17sp" android:textColor="@color/service_write_schedule_index_tv" android:layout_marginTop="@dimen/dimen_10_dip"/>
         </LinearLayout>
         <View android:layout_width="0.5dp" android:layout_height="match_parent" android:background="@color/contactbackgroud" />
          <LinearLayout android:id="@+id/service_pointexchange_exchangehisly" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0.0dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/btn_white_select">
             <ImageView android:layout_width="@dimen/dimen_40_dip" android:layout_height="@dimen/dimen_40_dip" android:src="@drawable/pointexchange_history"/>
             <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="兑换历史" android:textSize="17sp" android:textColor="@color/service_write_schedule_index_tv" android:layout_marginTop="@dimen/dimen_10_dip"/>
         </LinearLayout>
          <View android:layout_width="0.5dp" android:layout_height="match_parent" android:background="@color/contactbackgroud" />
          <LinearLayout android:id="@+id/service_pointexchange_exchangeexplainly" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0.0dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/btn_white_select">            
             <ImageView android:layout_width="@dimen/dimen_40_dip" android:layout_height="@dimen/dimen_40_dip" android:src="@drawable/pointexchange_changeexplan"/>
             <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="兑换说明" android:textSize="17sp" android:textColor="@color/service_write_schedule_index_tv" android:layout_marginTop="@dimen/dimen_10_dip" />
             
         </LinearLayout>

        </LinearLayout>     
    </RelativeLayout>
        
    </FrameLayout>
    
     
</LinearLayout>
