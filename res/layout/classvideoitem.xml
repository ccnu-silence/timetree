<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/item_mianly"
        android:orientation="vertical"
        android:layout_height="@dimen/fragment_commont_item_height"
        android:gravity="center"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center">

                <ImageView
                    android:id="@+id/show_thumb_img_iv"
                    android:layout_marginLeft="@dimen/dimen_11_dip"
                    android:layout_width="@dimen/fragment_commont_item_head_height"
                    android:layout_height="@dimen/fragment_commont_item_head_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/testim"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_commont_item_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"  android:layout_alignParentLeft="true"  android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/class_title_tv"
                        android:textSize="@dimen/txtSize_17_sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/class_duration_and_size_tv"
                        android:textSize="@dimen/txtSize_14_sp"
                        android:textColor="@color/contact_mainlvitemtv"
                        android:layout_marginTop="@dimen/dimen_2_dip"
                        android:maxWidth="@dimen/dimen_180_dip"
                        android:layout_width="wrap_content"
                        android:text="aaaaaa"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <TextView
                    style="@style/mainBtn_yz"
                    android:id="@+id/class_video_up_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_60_dip"
                    android:layout_height="@dimen/dimen_33_dip"
                    android:text="上传"
                    android:layout_marginRight="@dimen/dimen_20_dip"
                    android:gravity="center"
                    android:scaleType="centerInside"/>
s
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

      <View android:id="@+id/long_line" android:visibility="gone" style="@style/viewlinestyle" ></View>
      <View android:id="@+id/short_line" style="@style/viewlinestyle" android:visibility="gone" android:layout_marginLeft="@dimen/dimen_100_dip"></View>
</LinearLayout>