<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_index">
    <include layout="@layout/header_layout" android:id="@+id/title"/>
    <RelativeLayout
        android:background="@drawable/common_border_no_shadow"
        android:id="@+id/title_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip" android:layout_below="@id/title">
        <TextView
            android:id="@+id/show_text_title_mission"
            android:text="       邀请老师家长加入     \n让您的幼儿园APP互动起来"
            android:lineSpacingExtra="@dimen/dimen_4_dip"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:textColor="@color/base_color_text_black"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textSize="@dimen/txtSize_17_sp"
             />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25_dip"></LinearLayout>
    <TextView android:id="@+id/desctv"
        android:text="@string/Invite_select_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSize_15_sp"
        android:layout_below="@+id/title_show"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@drawable/listview_select_item"
        android:layout_below="@id/desctv"
        android:layout_marginTop="@dimen/dimen_25_dip"
        android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/ll_join_kindergaten">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90_dip"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_75_dip"
                android:layout_height="@dimen/dimen_75_dip"
                android:id="@+id/imageView1"
                android:src="@drawable/icon_joinkindergater"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imageView1"
                android:id="@+id/relativeLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入幼儿园"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:gravity="left"
                    android:id="@+id/tv_contactService1"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_below="@id/tv_contactService1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/contact_mainlvitemtv"
                    android:text="您目前还没有幼儿园" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_kinergaten_iv"
                android:layout_centerHorizontal="true"
                android:src="@drawable/puacnocheck"
                android:layout_marginRight="@dimen/dimen_11_dip"
                android:layout_alignTop="@+id/relativeLayout2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="#c5c5c5"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@drawable/listview_select_item"
        android:layout_below="@id/desctv"
        android:visibility="gone"
        android:weightSum="1"
        android:id="@+id/ll_join_class">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90_dip"

            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_75_dip"
                android:layout_height="@dimen/dimen_75_dip"
                android:id="@+id/imageView2"
                android:src="@drawable/icon_joinclass"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imageView2"
                android:id="@+id/relativeLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入班级"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:gravity="left"
                    android:id="@+id/tv_contactService2"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_below="@id/tv_contactService2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/contact_mainlvitemtv"
                    android:text="您目前还没有加入班级" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_class_iv"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_11_dip"
                android:src="@drawable/puacnocheck"
                android:layout_alignBottom="@+id/relativeLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="#c5c5c5"/>

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="@dimen/dimen_90_dip"
       android:background="@drawable/listview_select_item"
       android:layout_below="@id/desctv"
       android:weightSum="1"
       android:id="@+id/rl_contactService">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimen_90_dip"

           android:layout_gravity="center_vertical">

           <ImageView
               android:layout_width="@dimen/dimen_75_dip"
               android:layout_height="@dimen/dimen_75_dip"
               android:id="@+id/imageView"
               android:src="@drawable/invite_contact_service"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_marginLeft="38dp"
               android:layout_marginStart="38dp" />

           <RelativeLayout
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/dimen_20_dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:layout_toRightOf="@id/imageView">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/contactServicetv"
                   android:textSize="@dimen/txtSize_17_sp"
                   android:gravity="left"
                   android:id="@+id/tv_contactService"
                   android:layout_gravity="center_horizontal" />
               <TextView
                   android:gravity="left"
                   android:layout_marginTop="@dimen/dimen_5_dip"
                   android:layout_below="@id/tv_contactService"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/contact_mainlvitemtv"
                   android:text="@string/invite_quiceOpen" />
           </RelativeLayout>
       </RelativeLayout>

   </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dimen_0.5_dip"
      android:background="#c5c5c5"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@drawable/listview_select_item"
        android:layout_marginTop="@dimen/dimen_1_dip"
        android:layout_below="@id/rl_contactService"
        android:weightSum="1"
        android:id="@+id/invite_platform">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90_dip"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dimen_75_dip"
                android:layout_height="@dimen/dimen_75_dip"
                android:id="@+id/imageView_platform"
                android:src="@drawable/invite_teacher"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imageView_platform">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_tx"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:gravity="left"
                    android:id="@+id/tv_invite_platform"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_below="@id/tv_invite_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/contact_mainlvitemtv"
                    android:text="邀请老师自助注册加入" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
