<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_record_short"
    android:layout_width="@dimen/dimen_150_dip"
    android:layout_height="@dimen/dimen_150_dip"
    android:layout_gravity="center"
    android:background="@drawable/chat_top_voice_bg"
    android:padding="@dimen/dimen_10_dip"
    >

    <ImageView
        android:id="@+id/iv_short"
        android:layout_width="@dimen/dimen_80_dip"
        android:layout_height="@dimen/dimen_80_dip"
        android:layout_centerInParent="true"
        android:contentDescription="@string/action_settings"
        android:src="@drawable/chat_icon_voice_short" />

    <TextView
        style="@style/Smile.TextView._White"
        android:layout_below="@id/iv_short"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:text="@string/voice_short_tips"
        android:textSize="@dimen/txtSize_14_sp" />

</RelativeLayout>