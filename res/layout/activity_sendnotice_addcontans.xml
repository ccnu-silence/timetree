<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:tab="http://schemas.android.com/apk/res/com.yey.kindergaten"
    android:orientation="vertical" >
    <include  layout="@layout/header_layout"/>
       <LinearLayout 
           android:background="@color/white"
           android:layout_width="match_parent" android:layout_height="@dimen/dimen_80_dip" android:padding="@dimen/dimen_20_dip">
        
        <com.yey.kindergaten.widget.TabButton
            android:id="@+id/id_sendmsg_teacher_btn"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_weight="1"
            android:text="老师"
            tab:normal_bg_res="@drawable/tab_btn_left_big_normal"
            tab:selected_bg_res="@drawable/tab_btn_left_big_selected" />

        

   	<com.yey.kindergaten.widget.TabButton android:id="@+id/id_sendmsg_parent_btn" android:layout_width="0.0dip"  android:layout_height="@dimen/dimen_40_dip" android:text="@string/role_parent"   android:layout_weight="1" tab:normal_bg_res="@drawable/tab_btn_right_big_normal" tab:selected_bg_res="@drawable/tab_btn_right_big_selected"/>
    
    </LinearLayout>
<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip" android:background="@color/border_color_light_grey"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="fill_parent" >

           <FrameLayout
               android:id="@id/id_sendmsg_fragment_content"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/white" >

           </FrameLayout>

       </RelativeLayout>
    
</LinearLayout>
