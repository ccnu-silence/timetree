<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dimen_60_dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:text="New Text"
            android:id="@+id/show_class_inflater_tv"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/txtSize_17_sp"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="@dimen/dimen_35_dip"
            android:layout_height="@dimen/dimen_35_dip"
            android:id="@+id/add_class_inflater_btn"
            android:background="@drawable/puacnocheck"
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_alignParentBottom="true"
            android:background="#c5c5c5"
            ></TextView>
    </RelativeLayout>
</LinearLayout>
