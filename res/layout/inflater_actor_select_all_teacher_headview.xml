<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/service_select_all_actor_bg"
        android:layout_height="@dimen/dimen_44_dip" >
        
         <ImageView
        android:id="@+id/id_inflater_service_showchecked_iv"
        android:layout_width="@dimen/dimen_16_dip"
        android:layout_height="@dimen/dimen_16_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:src="@drawable/checkbox_selector" />

    <TextView
        android:id="@+id/id_inflater_service_showname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_11_dip"
        android:text="全选"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize_17_sp" />

    

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:layout_alignParentBottom="true"

        android:background="@color/border_color_light_grey" />
    </RelativeLayout>

</LinearLayout>
