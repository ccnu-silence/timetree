<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_height="@dimen/dimen_56_dip"
            android:background="@color/white">
            <!-- 头像 -->
            <FrameLayout
                android:id="@+id/frame_head"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true" >
                <com.yey.kindergaten.widget.CircleImageView
                    android:id="@id/iv_head"
                    android:layout_width="@dimen/fragment_commont_item_head_height" android:layout_height="@dimen/fragment_commont_item_head_height"
                    android:src="@drawable/defaulticon" android:layout_marginLeft="@dimen/dimen_5_dip"
                    app:border_color="@color/white" app:border_width="@dimen/dimen_1_dip" />
            </FrameLayout>
            <!-- 姓名 -->
            <RelativeLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerVertical="true" android:layout_marginLeft="@dimen/dimen_12_dip"
                android:layout_toRightOf="@id/frame_head" >
                <TextView
                    android:id="@id/tv_name"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="古天乐" android:ellipsize="end"
                    android:textColor="#000" android:textSize="18sp"/>
            </RelativeLayout>
            <!-- 班级 -->
            <TextView
                android:id="@+id/tv_cname_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="date" android:textSize="@dimen/txtSize_15_sp" android:textColor="@color/light_grey_v2"
                android:layout_centerVertical="true" android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_toLeftOf="@+id/tv_hour_time" android:layout_toStartOf="@+id/tv_cname_tv" />
            <!-- 时间 -->
            <TextView
                android:id="@+id/tv_hour_time"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="hour" android:textSize="@dimen/txtSize_18_sp"
                android:layout_marginRight="@dimen/dimen_5_dip" android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <!--<View android:id="@+id/view_line" style="@style/viewlinestyle" />-->

</LinearLayout>