<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_click_inflater"
    android:layout_width="match_parent"
      android:layout_height="@dimen/dimen_54_dip" >

    <com.yey.kindergaten.widget.CircleImageView
        android:id="@+id/id_inflater_service_showheadiv_cv"
        android:layout_width="@dimen/dimen_44_dip"
        android:layout_height="@dimen/dimen_44_dip"  
        android:layout_marginTop="@dimen/dimen_5_dip"      
        android:layout_marginBottom="@dimen/dimen_5_dip"    
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:border_width="0.5dp" 
        app:border_color="@color/white" 
        android:layout_marginLeft="@dimen/dimen_10_dip" />

    <ImageView
        android:id="@+id/id_inflater_service_showchecked_iv"
        android:layout_width="@dimen/dimen_16_dip"
        android:layout_height="@dimen/dimen_16_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:src="@drawable/checkbox_selector" />

    <TextView
        android:id="@+id/id_inflater_service_showname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_19_dip"
        android:layout_toRightOf="@+id/id_inflater_service_showheadiv_cv"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize_17_sp" />

    

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_inflater_service_showheadiv_cv"
        android:layout_marginLeft="@dimen/dimen_60_dip"
        android:background="@color/border_color_light_grey" />

</RelativeLayout>