<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="@color/contactextbg"
               android:orientation="horizontal" >
             <ImageView
                android:id="@id/activity_contacts_main_expangroupitemiv"
                 android:layout_marginLeft="@dimen/dimen_10_dip"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/collapse" />
             
             <TextView
               android:id="@id/activity_contacts_main_expangroupitemtv"
               android:layout_width="fill_parent"
               android:layout_height="@dimen/dimen_30_dip"           
               android:textSize="@dimen/txtSize_14_sp"
               android:textColor="#FF525252"
               android:gravity="center_vertical"
               android:layout_marginLeft="@dimen/dimen_10_dip"
               android:text="@string/contacts_public_account" />
    
           </LinearLayout>
    
     
</LinearLayout>
