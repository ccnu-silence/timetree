<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_56_dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_56_dip"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/dimen_5_dip"
        android:paddingLeft="@dimen/dimen_10_dip"
        android:paddingRight="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_5_dip" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_msg"
            android:layout_alignTop="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dimen_25_dip"
            android:layout_toRightOf="@+id/tv_msg" >

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="hahah"
            android:textColor="@color/service_write_schedule_tv"
            android:textSize="@dimen/txtSize_16_sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5_dip"
            android:singleLine="true"
            android:text="wansui"
            android:textColor="@color/service_write_schedule_tv"
            android:textSize="@dimen/txtSize_16_sp" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimen_40_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_marginRight="@dimen/dimen_5_dip"
            android:layout_centerVertical="true" />
       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="@dimen/dimen_60_dip"
        android:layout_height="match_parent"
        android:background="@color/schedule_right_delete_bg"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             android:gravity="center"
            android:src="@drawable/swipe_delete_service"
           />
<!--
        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/swipe_delete_service"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/light_grey"/>
   !-->                
    </RelativeLayout>

</LinearLayout>