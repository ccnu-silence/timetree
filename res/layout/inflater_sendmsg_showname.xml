<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_inflater_exbandlist_ll"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_height="@dimen/dimen_48_dip"
        android:padding="@dimen/dimen_10_dip"
        android:layout_width="match_parent">

    <TextView
        android:id="@+id/id_inflater_sendmsg_showname_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/id_inflater_sendmsg_showname_tv"
        android:layout_alignBottom="@id/id_inflater_sendmsg_showname_tv"
        android:layout_alignParentRight="true"
        
        android:text="TextView" />

    <TextView
        android:id="@id/id_inflater_sendmsg_showname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_toLeftOf="@+id/id_inflater_sendmsg_showname_tv2"
        android:text="xxxxxxxxxxxxx"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/id_inflater_sendmsg_showname_tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_alignBaseline="@id/id_inflater_sendmsg_showname_tv"
        android:layout_alignBottom="@id/id_inflater_sendmsg_showname_tv"
        android:layout_toLeftOf="@id/id_inflater_sendmsg_showname_tv"
        android:text="TextView" />

</RelativeLayout>
</RelativeLayout>
