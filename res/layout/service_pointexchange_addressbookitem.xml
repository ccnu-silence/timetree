<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" > 
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:layout_marginTop="@dimen/dimen_11_dip"
        android:layout_marginBottom="@dimen/dimen_11_dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
            <View style="@style/viewlinestyle"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_50_dip"
              android:orientation="horizontal" >

              <TextView            
                  style="@style/service_addressbook_item"    
                  android:layout_centerVertical="true"    
                  android:layout_alignParentLeft="true"       
                  android:layout_marginLeft="@dimen/dimen_11_dip"    
                  android:textColor="@color/black"                
                  android:text="@string/service_recievepeople" />
              <TextView       
                  android:id="@id/service_addressbook_itemrecnametv"   
                  android:layout_centerVertical="true"      
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dimen_11_dip"
                  style="@style/service_addressbook_item"                   
                 />

          </RelativeLayout>
          <View style="@style/viewlinestyle"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_50_dip"
              android:orientation="horizontal" >
               <TextView            
                  style="@style/service_addressbook_item" 
                  android:layout_centerVertical="true"       
                  android:layout_alignParentLeft="true"    
                   android:textColor="@color/black"    
                  android:layout_marginLeft="@dimen/dimen_11_dip"               
                  android:text="@string/service_recieveaddress" />
              <TextView            
                   android:id="@id/service_addressbook_itemrecaddresstv"     
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"    
                   android:layout_marginRight="@dimen/dimen_11_dip"
                   style="@style/service_addressbook_item"                   
                  />
          </RelativeLayout>
           <View style="@style/viewlinestyle"/>
           <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_50_dip"
              android:orientation="horizontal" >
                <TextView            
                  style="@style/service_addressbook_item"     
                  android:layout_centerVertical="true"    
                  android:layout_alignParentLeft="true"  
                   android:textColor="@color/black"       
                  android:layout_marginLeft="@dimen/dimen_11_dip"             
                  android:text="@string/service_recieveaphone" />
              <TextView         
                   android:id="@id/service_addressbook_itemrecphonetv" 
                   android:layout_centerVertical="true"    
                   android:layout_alignParentRight="true"       
                   android:layout_marginRight="@dimen/dimen_11_dip"
                   style="@style/service_addressbook_item"                   
                 />
          </RelativeLayout>
           <View style="@style/viewlinestyle"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_50_dip"
              android:orientation="horizontal" >
                <TextView            
                  style="@style/service_addressbook_item"   
                  android:layout_centerVertical="true"    
                  android:layout_alignParentLeft="true"  
                   android:textColor="@color/black"        
                  android:layout_marginLeft="@dimen/dimen_11_dip"              
                  android:text="@string/service_recieveyoubian" />
              <TextView            
                   android:id="@+id/service_addressbook_itemrecyoubiantv"    
                   android:layout_centerVertical="true"     
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/dimen_11_dip"
                   style="@style/service_addressbook_item"                   
                   />
          </RelativeLayout>
          <View style="@style/viewlinestyle"/>
          <LinearLayout  android:id="@+id/service_addressbook_itemrecdelly" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="vertical">
             <TextView 
                android:id="@id/service_addressbook_itemrecdelbt"     
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50_dip"
                android:gravity="center"
                android:textSize="@dimen/txtSize_18_sp"
                android:textColor="@color/purple"
                android:text="@string/service_del" />
          <View style="@style/viewlinestyle"/>
         </LinearLayout>
    </LinearLayout>
</LinearLayout>
