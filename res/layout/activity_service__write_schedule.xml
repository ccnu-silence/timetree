<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header_layout" />
<ScrollView     android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/light">

   <LinearLayout   android:layout_width="match_parent"
                  android:layout_height="match_parent" 
                 android:orientation="vertical" >
    <com.yey.kindergaten.widget.MyGridviewWithScrollView
        android:id="@id/id_service_write_schedule_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:background="@color/white"
        android:padding="@dimen/dimen_10_dip" >
    </com.yey.kindergaten.widget.MyGridviewWithScrollView>


    <RelativeLayout
        android:id="@+id/id_service_schedule_time_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56_dip"
        android:background="@drawable/selector_listview_item" 
        >
<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip"  android:background="@color/border_color_light_grey"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
            android:layout_centerVertical="true"   
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@id/id_service_write_schedule_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_19_dip"
            android:layout_toLeftOf="@+id/imageView1"
            android:text="TextView"
            android:textColor="@color/service_write_schedule_show_tv"
            android:textSize="@dimen/txtSize_17_sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_25_dip"
            android:text="@string/service_write_schedule_time"
            android:textColor="@color/service_write_schedule_index_tv"
            android:textSize="@dimen/txtSize_17_sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/id_service_schedule_tixing_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56_dip"
        android:background="@drawable/selector_listview_item" 
        >
<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip"  android:background="@color/border_color_light_grey"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@id/id_service_write_schedule_tixing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:layout_toLeftOf="@+id/imageView2"
            android:text="TextView"
            android:textColor="@color/service_write_schedule_show_tv"
            android:textSize="@dimen/txtSize_17_sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_25_dip"
            android:text="@string/service_write_schedule_tixing"
            android:textColor="@color/service_write_schedule_index_tv"
            android:textSize="@dimen/txtSize_17_sp" />

    </RelativeLayout>

    

    <RelativeLayout
        android:id="@+id/id_service_schedule_comments_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/dimen_56_dip"
       >
<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip"  android:background="@color/border_color_light_grey"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right" />

            <RelativeLayout
                android:id="@+id/id_service_showactor_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toRightOf="@+id/textView1"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:background="@null"
                android:alpha="100"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/id_service_write_schedule_comments_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dimen_17_dip"
                    android:singleLine="false"               
                    android:textColor="@color/service_write_schedule_show_tv"
                    android:textSize="@dimen/txtSize_17_sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/id_service_showtheme_iv"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/textView1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_25_dip"
                android:layout_alignBottom="@+id/id_service_showactor_rl"
               
                android:text="@string/service_write_schedule_comments"
                android:textColor="@color/service_write_schedule_index_tv"
                android:textSize="@dimen/txtSize_17_sp" />

    </RelativeLayout>


<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip"  android:background="@color/border_color_light_grey"/>
    <RelativeLayout
        android:id="@+id/id_service_schedule_actor_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_56_dip"      
        android:background="@color/white" >
    
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/arrow_right" />

        <com.yey.kindergaten.widget.MyGridviewWithScrollView
            android:id="@+id/id_sendmsg_showname_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_toRightOf="@+id/text"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="100dp"
            android:numColumns="1" >

        </com.yey.kindergaten.widget.MyGridviewWithScrollView>

        <TextView
            android:id="@id/id_service_write_schedule_actor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="@color/service_write_schedule_show_tv"
            android:textSize="@dimen/txtSize_17_sp" />

        <TextView
            android:id="@+id/id_service_write_schedule_actor_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                 android:textColor="@color/service_write_schedule_show_tv"
            android:textSize="@dimen/txtSize_17_sp"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/id_service_write_schedule_actor_tv"
            android:layout_toLeftOf="@id/id_service_write_schedule_actor_tv"
            android:visibility="gone"
            android:text="TextView" />

        <TextView
            android:id="@+id/id_service_write_schedule_actor_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/service_write_schedule_tv"
            android:textSize="@dimen/txtSize_17_sp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:visibility="gone"
            android:layout_alignBottom="@id/id_service_write_schedule_actor_tv"
            android:layout_toLeftOf="@+id/id_service_write_schedule_actor_tv2"
            android:text="TextView" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_22_dip"
            android:text="@string/service_write_schedule_actor"
            android:textColor="@color/service_write_schedule_index_tv"
            android:textSize="@dimen/txtSize_17_sp" />

    </RelativeLayout>
<View  android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5_dip"  android:background="@color/border_color_light_grey"/>
    
    <RelativeLayout
        android:id="@+id/id_service_delete_schedule_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56_dip"
        android:background="@drawable/selector_listview_item" 
        android:layout_marginTop="@dimen/dimen_45_dip"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="删  除  日  程"
            android:textColor="@color/red"
            android:textSize="@dimen/txtSize_17_sp" />

    </RelativeLayout>

       
    </LinearLayout>
    
   
</ScrollView>
</LinearLayout>