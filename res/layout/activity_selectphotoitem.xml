<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

   <FrameLayout 
     android:layout_width="@dimen/dimen_120_dip"
     android:layout_height="@dimen/dimen_120_dip"
     android:layout_margin="@dimen/dimen_2_dip"
     >

      <ImageView
        android:id="@id/selectphoto_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      >
      <ProgressBar 
        android:id="@id/selectphoto_probar"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        />
      </LinearLayout>
   
     <ImageView  
        android:id="@id/selectphoto_select"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:background="@drawable/checkbox_true"  
        android:layout_marginTop="@dimen/dimen_5_dip"  
        android:layout_marginRight="@dimen/dimen_23_dip" 
        android:layout_gravity="top|right"     
        /> 
     <ImageView  
        android:id="@id/selectphoto_unselect"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginTop="@dimen/dimen_5_dip"  
        android:layout_marginRight="@dimen/dimen_23_dip"   
        android:background="@drawable/checkbox_false"  
        android:layout_gravity="top|right"       
     /> 
    </FrameLayout>

</LinearLayout>
