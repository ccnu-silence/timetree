<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dimen_15_dip"
    android:background="@color/bgcolor_time">
    <include
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        layout="@layout/vertical_image" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:orientation="vertical"
        android:padding="@dimen/dimen_2_dip" >
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_4_dip"
            android:id="@+id/layout_voice_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grow_today"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:visibility="visible">
             <TextView
                android:id="@+id/tv_day"
                android:layout_marginLeft="@dimen/dimen_7_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_avator"
                android:text="今天"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSize_12_sp"
                android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_voice_grow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add_avator"
                    android:background="@drawable/voice_three"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtSize_20_sp"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/tv_time_voice_grow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4''"
                    android:textColor="@color/blue_time"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:textSize="@dimen/txtSize_13_sp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_growthdiary_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_growbg"
            android:padding="@dimen/dimen_10_dip"
            android:layout_marginTop="@dimen/dimen_8_dip"
            android:layout_below="@+id/layout_voice_item">
            <TextView
        	    android:id="@+id/tv_growthdiary_item"
                android:layout_width="fill_parent"
           	    android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_15_sp"
                android:textColor="@color/txtcolor_grow"
                android:lineSpacingExtra="3dp"
                android:text="说说"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:id="@+id/growthdiary_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_220_dip"
            android:src="@drawable/img_person_icon"
            android:scaleType="centerCrop"
            android:background="@drawable/image_bg"
            android:layout_below="@+id/rl_growthdiary_content"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_below="@+id/growthdiary_item_iv">
            <TextView
                android:id="@+id/tv_time_grow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:25"
                android:textColor="@color/time_color"
                android:layout_marginTop="@dimen/dimen_10_dip"/>
            <ImageView
                android:id="@+id/growthdiary_delete_iv"
                android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:src="@drawable/iv_delete"
           	    android:layout_alignParentRight="true"
           	    android:layout_marginTop="@dimen/dimen_10_dip"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>