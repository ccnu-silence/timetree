<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
     <ScrollView 
       android:id="@+id/group_sc"
       android:layout_width="fill_parent"
       android:layout_height="match_parent" 
       >
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"  
        android:orientation="vertical"  
        >
     <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="@dimen/dimen_20_dip">
        <RelativeLayout  android:id="@+id/generalgroup_groupnamely" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
            <View style="@style/viewlinestyle"/>
          <TextView  android:id="@+id/generalgroup_groupname" android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:layout_alignParentLeft="true"  android:text="群名称" android:layout_centerVertical="true" android:gravity="center_vertical" android:layout_marginLeft="@dimen/dimen_11_dip" android:textColor="@color/black" android:textSize="@dimen/txtSize_16_sp"/>
          <EditText android:id="@+id/generalgroup_groupnametv" android:maxLength="10" android:layout_toRightOf="@id/generalgroup_groupnametv"  android:layout_marginLeft="@dimen/dimen_20_dip" android:hint="请输入群名字"   android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:minWidth="@dimen/dimen_80_dip" android:layout_alignParentRight="true"    android:layout_centerVertical="true"  android:layout_marginRight="@dimen/dimen_30_dip" android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp" android:background="@null" android:gravity="right|center"/>       
          </RelativeLayout>
       
         <View style="@style/viewlinestyle"/>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/dimen_51_dip"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/dimen_11_dip"
                 android:text="@string/set_addcode"
                 android:textColor="@color/black" 
                 android:textSize="@dimen/txtSize_16_sp" />
            
               <LinearLayout 
                 android:layout_width="@dimen/dimen_slip64_dip"
                 android:layout_height="@dimen/dimen_slip33_dip"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:gravity="right|center_vertical"
                  >

               <com.yey.kindergaten.widget.SlipButton
                 android:id="@+id/slipButton"
                 android:layout_marginRight="@dimen/dimen_30_dip"
                 android:layout_width="@dimen/dimen_slip64_dip"
                 android:layout_height="@dimen/dimen_slip33_dip"
                />
               </LinearLayout>
         </RelativeLayout>
        
      <LinearLayout android:id="@+id/createkind_codely" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
          <RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
            <View style="@style/viewlinestyle"/>
          <TextView android:id="@+id/generalgroup_code"  android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:layout_alignParentLeft="true"  android:layout_centerVertical="true" android:gravity="center_vertical" android:layout_marginLeft="@dimen/dimen_11_dip" android:textColor="@color/black" android:textSize="@dimen/txtSize_16_sp"/>
          <EditText android:id="@+id/generalgroup_codetv" android:hint="@string/pleaseset_addcode" android:maxLength="10" android:layout_toRightOf="@id/generalgroup_code" android:layout_marginLeft="@dimen/dimen_20_dip"  android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content"  android:minWidth="@dimen/dimen_80_dip" android:layout_alignParentRight="true"    android:layout_centerVertical="true"  android:layout_marginRight="@dimen/dimen_30_dip" android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp" android:background="@null" android:gravity="right|center"/>      
        </RelativeLayout> 

      </LinearLayout>
    </LinearLayout>
        
        
       
    
     
     
     
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" >             
      <View style="@style/viewlinestyle"/>
         <RelativeLayout android:id="@+id/generalgroup_miaoshuly" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">      
                     
          <TextView  android:id="@+id/maioshu" android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content"  android:text="群介绍" android:gravity="center_vertical" android:layout_marginLeft="@dimen/dimen_11_dip" android:textColor="@color/black" android:textSize="@dimen/txtSize_16_sp"/>
          <TextView 
              android:layout_toRightOf="@id/maioshu"
              android:layout_marginLeft="@dimen/dimen_20_dip"
              android:id="@+id/generalgroup_miaoshutv" android:minHeight="@dimen/dimen_50_dip"    android:layout_height="wrap_content" android:hint="请输入群介绍" android:layout_width="wrap_content"     android:layout_alignParentRight="true" android:textColor="@color/contact_mainlvitemtv" android:layout_marginRight="@dimen/dimen_30_dip" android:textSize="@dimen/txtSize_16_sp" android:gravity="right|center" />        
           <ImageView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="@dimen/dimen_11_dip"  android:layout_centerVertical="true" android:src="@drawable/arrow_right" />
        </RelativeLayout>
     <View style="@style/viewlinestyle"/>
   </LinearLayout>
      
  
    
      
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="@dimen/dimen_20_dip">
          <TextView android:id="@+id/mecreatekinder_finish" android:layout_height="@dimen/dimen_50_dip" android:layout_width="fill_parent"   android:gravity="center" android:textColor="@color/white" android:textSize="@dimen/txtSize_18_sp" android:text="完成" android:background="@drawable/selector_main_button" android:layout_marginLeft="@dimen/dimen_10_dip" android:layout_marginRight="@dimen/dimen_10_dip"/>
     </LinearLayout>
    </LinearLayout>
   </ScrollView>

</LinearLayout>
