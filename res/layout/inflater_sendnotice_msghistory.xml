<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout

        android:layout_width="match_parent"     
        android:layout_height="wrap_content" >

        
    <TextView
        android:id="@id/id_sendmsg_inflater_histime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:textSize="@dimen/txtSize_17_sp"
        android:textColor="@color/base_color_text_black"
       />
        <TextView
            android:id="@id/id_sendmsg_inflater_hisstate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
             android:layout_marginRight="@dimen/dimen_10_dip"
                   android:textSize="@dimen/txtSize_17_sp"
        android:textColor="@color/base_color_text_black"
             />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_10_dip"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/id_senmdmsg_inflater_hiscontent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:textSize="@dimen/txtSize_17_sp"
            android:textColor="@color/base_color_text_black"
              />

    </LinearLayout>

</LinearLayout>
