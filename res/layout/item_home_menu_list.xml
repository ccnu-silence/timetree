<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_147_dip"
    android:layout_height="wrap_content"
    android:id="@+id/home_menu_list_main_ll"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_menu_list_icon"
        android:layout_width="@dimen/dimen_30_dip"
        android:layout_height="@dimen/dimen_30_dip"
        android:layout_gravity="center" android:layout_marginLeft="@dimen/dimen_14_dip"
        android:src="@drawable/home_menu_icon_notice"/>
    <TextView android:id="@+id/home_menu_list_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_55_dip"
        android:textSize="@dimen/dimen_17_dip" android:textColor="@color/home_menu_text"
        android:layout_marginLeft="@dimen/dimen_14_dip"
        android:layout_gravity="center_vertical" android:gravity="center_vertical"
        android:text="发通知"
        />

</LinearLayout>