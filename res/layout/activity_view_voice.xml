<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5_dip"
    android:gravity="center_horizontal">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10_dip">
        <com.yey.kindergaten.widget.GenerateProcessButton
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txtSize_30_sp"
            custom:completeText=""
            custom:progressText=""/>
        <!--<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/voice_photo_new" android:layout_alignParentRight="true"/>-->
        <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:text="00:00" android:id="@+id/time_recording"/>-->
        <!--<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/voice_photo_new" android:layout_alignParentLeft="true"/>-->
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginTop="@dimen/dimen_5_dip">
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/delete" android:layout_alignParentRight="true" android:id="@+id/delete"/>
	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" >
	    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/recording_play" android:layout_centerHorizontal="true" android:id="@+id/voice_play"/>
	</RelativeLayout>
</LinearLayout>
