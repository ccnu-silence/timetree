<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical" >
    <!-- 标题栏 -->
    <include android:id="@+id/activity_contacts_main_titlely" layout="@layout/header_layout"/>

    <LinearLayout
        android:id="@+id/no_data_layout"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center" android:visibility="gone"
        android:layout_width="match_parent" >
        <!-- 公众号 -->
        <LinearLayout android:id="@+id/public_account_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <!-- 头像 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.yey.kindergaten.widget.CircleImageView
                    android:id="@+id/contact_puacitemiv1"
                    android:layout_marginLeft="@dimen/dimen_11_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_44_dip"
                    android:layout_height="@dimen/dimen_44_dip"
                    android:src="@drawable/contact_publicaccount"
                    app:border_width="0.5dp"
                    app:border_color="@color/white" />
            </LinearLayout>
            <!-- 头像右边的布局 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54_dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <!-- 名字 -->
                <TextView
                    android:id="@id/contact_puacitemnametv"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公众号" />
                <!-- 右箭头 -->
                <ImageView
                    android:id="@+id/arrowimage1"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_11_dip"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 分割线 -->
        <View android:id="@+id/item_view_pub" android:layout_marginLeft="45dip" style="@style/viewlinestyle" />
        <!-- 班级列表 -->
        <LinearLayout android:id="@+id/classes_list_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <!-- 头像 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.yey.kindergaten.widget.CircleImageView
                    android:id="@+id/contact_puacitemiv3"
                    android:layout_marginLeft="@dimen/dimen_11_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_44_dip"
                    android:layout_height="@dimen/dimen_44_dip"
                    android:src="@drawable/contact_classeslist"
                    app:border_width="0.5dp"
                    app:border_color="@color/white" />
            </LinearLayout>
            <!-- 头像右边的布局 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54_dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <!-- 名字 -->
                <TextView
                    android:id="@id/contact_puacitemnametv"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级列表" />
                <!-- 右箭头 -->
                <ImageView
                    android:id="@+id/arrowimage3"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_11_dip"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 分割线 -->
        <View android:id="@+id/item_view_class" android:layout_marginLeft="45dip" style="@style/viewlinestyle" />
        <!-- 幼儿园老师 -->
        <LinearLayout android:id="@+id/kindergaten_teacher_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <!-- 头像 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.yey.kindergaten.widget.CircleImageView
                    android:id="@+id/contact_puacitemiv2"
                    android:layout_marginLeft="@dimen/dimen_11_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_44_dip"
                    android:layout_height="@dimen/dimen_44_dip"
                    android:src="@drawable/contact_teacher"
                    app:border_width="0.5dp"
                    app:border_color="@color/white" />
            </LinearLayout>
            <!-- 头像右边的布局 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54_dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <!-- 名字 -->
                <TextView
                    android:id="@id/contact_puacitemnametv"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幼儿园老师" />
                <!-- 右箭头 -->
                <ImageView
                    android:id="@+id/arrowimage2"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_11_dip"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 邀请老师 -->
        <LinearLayout android:id="@+id/invite_teacher_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <!-- 头像 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.yey.kindergaten.widget.CircleImageView
                    android:id="@+id/contact_puacitemiv"
                    android:layout_marginLeft="@dimen/dimen_11_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_44_dip"
                    android:layout_height="@dimen/dimen_44_dip"
                    android:src="@drawable/contact_joininto"
                    app:border_width="0.5dp"
                    app:border_color="@color/white" />
            </LinearLayout>
            <!-- 头像右边的布局 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_54_dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <!-- 名字 -->
                <TextView
                    android:id="@id/contact_puacitemnametv"
                    android:textSize="@dimen/txtSize_17_sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请老师" />
                <!-- 右箭头 -->
                <ImageView
                    android:id="@+id/arrowimage"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_11_dip"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
        <View android:id="@+id/item_longview" style="@style/viewlinestyle" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent" android:background="@color/white"
        android:layout_height="fill_parent">
        <!-- 在TeacherFragment中没用到 -->
        <ScrollView
            android:id="@+id/activity_contacts_main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/invite_ll"
                    android:layout_width="fill_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/include_layout_image_text" android:id="@+id/include_layout_imagetext_1" />
                    <View android:id="@id/item_view" style="@style/viewlinestyle" />
                </LinearLayout>
                <com.yey.kindergaten.widget.MyListViewWithScrollView
                    android:id="@id/activity_contacts_main_puaclistview"
                    style="@style/contactslistview"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/invite_ll" />
                <com.yey.kindergaten.widget.MyExpandableListView
                    android:id="@+id/activity_contacts_main_parant_expandlv"
                    android:layout_width="match_parent"
                    android:groupIndicator="@null"
                    android:background="@null"
                    android:childDivider="@null"
                    style="@style/contactsexpandlistview"
                    android:layout_below="@id/invite_ll"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </ScrollView>

        <com.yey.kindergaten.widget.PullToRefreshHeaderView
            android:id="@+id/pull_torefresh_contact"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:paddingRight="@dimen/dimen_2_dip"
            android:paddingLeft="@dimen/dimen_1_dip"
            android:layout_below="@+id/uploadlayout"
            android:layout_above="@+id/id_show_edit_ll"
            android:layout_height="fill_parent">
            <com.yey.kindergaten.widget.PinnedSectionListView
                android:id="@id/activity_contacts_main_teacherlistview"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:divider="@null"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/invite_ll" />
        </com.yey.kindergaten.widget.PullToRefreshHeaderView>

        <!-- 新手指引，玩转时光树(没kid) -->
        <FrameLayout
            android:id="@+id/teacher_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout android:background="@color/white" android:id="@+id/fragmnetly_notitaddly"  android:layout_width="fill_parent" android:layout_height="550dp" android:orientation="vertical">
                <ImageView android:id="@+id/shou_guide_image" android:layout_marginBottom="@dimen/dimen_150_dip" android:src="@drawable/director_guide" android:layout_width="match_parent" android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout android:layout_marginBottom="@dimen/dimen_10_dip" android:layout_gravity="bottom" android:layout_width="match_parent" android:padding="@dimen/dimen_5_dip" android:layout_height="45dip" >
                <Button
                    android:id="@+id/id_load_guade_url" android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dip" android:layout_marginRight="@dimen/dimen_20_dip"
                    android:layout_height="match_parent" android:text="下一步" style="@style/mainBtn" />
            </LinearLayout>
        </FrameLayout>

        <!-- 园长暂无老师界面(有kid，teacherlist.size() == 0) -->
        <RelativeLayout
            android:id="@+id/has_kid_no_teacher_fl"
            android:layout_width="match_parent"
            android:visibility="gone" android:background="@color/white"
            android:layout_height="fill_parent">
                <ImageView android:layout_gravity="center" android:id="@+id/no_teacher_join"
                    android:src="@drawable/no_teacher_join" android:layout_width="@dimen/dimen_150_dip" android:layout_height="@dimen/dimen_150_dip"
                    android:layout_marginTop="@dimen/dimen_100_dip" android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:id="@+id/no_teacher_join_btn" android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_25_dip" android:layout_marginRight="@dimen/dimen_60_dip"
                    android:layout_marginLeft="@dimen/dimen_60_dip" android:layout_gravity="center"
                    android:layout_height="wrap_content" android:text="邀请老师" style="@style/mainBtn"
                    android:layout_below="@+id/no_teacher_join" android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <!-- 暂无小朋友界面(有kid，childcount == 0) -->
        <RelativeLayout
            android:id="@+id/has_kid_no_parent_fl"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView android:layout_gravity="center"  android:id="@+id/no_parent_join"
                android:src="@drawable/no_parent_join" android:layout_width="@dimen/dimen_150_dip"  android:layout_height="@dimen/dimen_150_dip"
                android:layout_marginTop="@dimen/dimen_100_dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/no_parent_join_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_25_dip"
                android:layout_marginRight="@dimen/dimen_60_dip"
                android:layout_marginLeft="@dimen/dimen_60_dip"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:text="邀请家长" style="@style/mainBtn"
                android:layout_below="@+id/no_parent_join"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
