<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header_layout"/>

    <TextView
        android:id="@+id/_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_140_dip"
        android:textSize="@dimen/txtSize_18_sp"
        android:textColor="@color/black"
        android:background="@drawable/commont_white_button"
        android:padding="@dimen/dimen_10_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:gravity="center"
        >


        <LinearLayout
            android:id="@+id/ll_invite_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/dimen_70_dip"
                android:layout_height="@dimen/dimen_70_dip"
                android:src="@drawable/groupshare"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="@color/pullmenu_txt"
                android:textSize="@dimen/txtSize_17_sp"
                android:layout_marginTop="@dimen/dimen_10_dip"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_share_copylink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_40_dip"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/dimen_70_dip"
                android:layout_height="@dimen/dimen_70_dip"
                android:src="@drawable/groupcopytext"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制链接"
                android:textColor="@color/pullmenu_txt"
                android:textSize="@dimen/txtSize_17_sp"
                android:layout_marginTop="@dimen/dimen_10_dip"
                />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
