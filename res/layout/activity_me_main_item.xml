<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:background="@drawable/common_listview_item" android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="@dimen/dimen_56_dip"
        android:background="@drawable/listview_select_item"
        android:paddingBottom="0.0dip">
        <ImageView
            android:id="@+id/iv_activity_me_item"
            android:layout_width="@dimen/dimen_34_dip" android:layout_height="@dimen/dimen_34_dip"
            android:layout_centerVertical="true" android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_marginRight="@dimen/dimen_11_dip" android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_activity_me_item"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_toRightOf="@+id/iv_activity_me_item"
            android:textSize="@dimen/txtSize_17_sp" android:textColor="@color/black" />
        <ImageView
            android:id="@+id/row_img_01"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_11_dip" android:scaleType="matrix"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right" />
        <TextView
            android:id="@+id/tv_activity_me_item_second"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_marginRight="@dimen/dimen_5_dip"
            android:layout_toLeftOf="@+id/row_img_01" android:textSize="@dimen/txtSize_17_sp"
            android:textColor="@color/black" android:visibility="gone" />
    </RelativeLayout>
    <View android:id="@id/item_view" android:layout_marginLeft="@dimen/dimen_57_dip" style="@style/viewlinestyle"/>
</LinearLayout>