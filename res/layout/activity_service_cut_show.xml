<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" >
    <View android:id="@+id/cuttopitem" style="@style/viewlinestyle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20_dip" 
        android:background="@color/light_grey"
        android:id="@+id/cut_title">
        <TextView 
            android:id="@+id/show_title_separator_tv"
            android:textSize="@dimen/txtSize_12_sp" android:textColor="@color/grey"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_marginLeft="@dimen/dimen_11_dip"
            android:visibility="gone" android:text="班级群" />
    </RelativeLayout>
    <View android:id="@+id/cutitem" style="@style/viewlinestyle"/>
</LinearLayout>
