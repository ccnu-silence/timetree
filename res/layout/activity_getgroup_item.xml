<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_select_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
   
     <LinearLayout
        android:id="@+id/item_mianly"
        android:orientation="vertical"
        android:layout_height="@dimen/dimen_70_dip" 
        android:gravity="center"
        android:layout_width="match_parent"
        >
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:gravity="center"
        >

            <LinearLayout        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            
            android:gravity="center">
            
            <com.yey.kindergaten.widget.CircleImageView
                android:id="@+id/grouplist_head"                                  
                android:layout_marginLeft="@dimen/dimen_11_dip"                 
                android:layout_width="@dimen/dimen_56_dip"
                android:layout_height="@dimen/dimen_56_dip"
                android:src="@drawable/testim"
                app:border_width="0.5dp" 
                app:border_color="@color/white" 
                />
            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70_dip"         
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_16_dip"               
            android:gravity="center_vertical"
            android:orientation="vertical" >

         <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"  android:layout_alignParentLeft="true"  android:layout_centerVertical="true">
            <TextView
                android:id="@+id/grouplist_name"
                android:textSize="@dimen/txtSize_17_sp"              
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
             <TextView
                android:id="@+id/decs_group"
                android:textSize="@dimen/txtSize_14_sp"              
                android:textColor="@color/contact_mainlvitemtv"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:maxWidth="@dimen/dimen_180_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                    
                android:singleLine="true"
                />
       </LinearLayout>
             <ImageButton
                android:id="@+id/contatc_puacstatebt"      
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"   
                android:layout_width="@dimen/dimen_30_dip"            
                android:layout_height="@dimen/dimen_70_dip"   
                android:layout_marginRight="@dimen/dimen_20_dip"  
                android:background="@null"   
                android:gravity="center"                
               />
             
        </RelativeLayout>              
    </LinearLayout> 
      </LinearLayout>
         <View   android:id="@id/item_view"  android:layout_marginLeft="@dimen/dimen_81_dip" style="@style/viewlinestyle" />       
         <View   android:id="@+id/item_view_long"  style="@style/viewlinestyle" android:visibility="gone" />       
</LinearLayout>