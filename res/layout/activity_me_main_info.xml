<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/light_grey">
    <include layout="@layout/header_layout"/>
    <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" >    
	    	 <com.yey.kindergaten.widget.MyListViewWithScrollView	android:id="@+id/lv_activity_me_main_info"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"      
		        style="@style/contactslistview"
		        />
           <TextView android:id="@+id/contact_phone_remarks"
               android:layout_width="fill_parent" android:layout_height="@dimen/dimen_20_dip"
               android:layout_marginLeft="@dimen/dimen_16_dip" android:layout_marginTop="@dimen/dimen_10_dip"
               android:text="请填写联系电话，方便老师与您及时联系！" android:textColor="@color/contact_mainlvitemtv"/>
      </LinearLayout>
   </ScrollView>
</LinearLayout>
