<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/dimen_60_dip"
        android:padding="@dimen/dimen_10_dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_18_sp"
            android:textColor="@color/base_color_text_black"
            android:layout_gravity="center_vertical"
            android:text="标题"/>

        <EditText
            android:id="@+id/title_tv"
            android:background="@drawable/layout_gry_bg"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_height="match_parent" />

        </LinearLayout>
    <View  style="@style/viewlinestyle"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip"
        android:layout_height="@dimen/dimen_60_dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_18_sp"
            android:textColor="@color/base_color_text_black"
            android:layout_gravity="center_vertical"
            android:text="类型"/>

        <EditText
            android:id="@+id/type_et"
            android:background="@drawable/layout_gry_bg"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View  style="@style/viewlinestyle"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/dimen_100_dip"
        android:padding="@dimen/dimen_10_dip"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_18_sp"
            android:textColor="@color/base_color_text_black"
            android:layout_gravity="center_vertical"
            android:text="简介"/>

        <EditText
            android:id="@+id/jianjie_et"
            android:padding="@dimen/dimen_5_dip"
            android:gravity="top"
            android:background="@drawable/layout_gry_bg"
            android:layout_width="match_parent"
            android:hint="一句话描述视频内容（可不填）"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_height="match_parent" />

    </LinearLayout>
    <Button
        android:id="@+id/inflater_to_upload"
        style="@style/mainBtn_yz"
        android:text="确定上传"
        android:textSize="@dimen/txtSize_18_sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_25_dip"
        android:layout_marginRight="@dimen/dimen_25_dip"
        android:layout_marginTop="@dimen/dimen_25_dip"
        android:layout_height="@dimen/dimen_50_dip" />
</LinearLayout>