<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_111_dip" 
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_11_dip" 
        android:layout_marginRight="@dimen/dimen_11_dip"
        android:orientation="horizontal"
        >
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:gravity="center">
        
        <ImageView
            android:id="@id/service_pointexchangemian_itemiv"
            android:layout_alignParentLeft="true"          
            android:layout_centerVertical="true"    
            android:layout_width="@dimen/dimen_113_dip"
            android:layout_height="@dimen/dimen_85_dip"
            android:src="@drawable/shopping" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_85_dip"
            android:layout_centerVertical="true" 
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_toRightOf="@id/service_pointexchangemian_itemiv"       
            android:orientation="vertical" >
      
             <TextView      
              android:id="@id/service_pointexchangemian_itemgoodstv"
              android:layout_alignParentTop="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"      
              android:textSize="@dimen/txtSize_17_sp"
              android:textColor="@color/black"
              android:text="32G移动U盘" />
            
             
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:orientation="horizontal"
                 >
              <TextView   
              android:id="@id/service_pointexchangemian_itempointtv"                    
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/txtSize_20_sp"
              android:textColor="#9C85D6"
              android:text="500"/>
              
               <TextView   
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/txtSize_14_sp"
              android:textColor="@color/contact_mainlvitemtv"
              android:text="分"/>
              </LinearLayout>
        </RelativeLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"        
            android:layout_alignParentRight="true"  
            android:gravity="center"   
            android:orientation="vertical" >
               
             
             <Button
                android:id="@id/service_pointexchangemian_itemexchangebtn" 
                android:layout_width="wrap_content"           
                android:layout_height="@dimen/dimen_40_dip"
                android:background="@drawable/toastselector"
                android:textColor="@color/white"  
                android:layout_gravity="center"                   
                android:textSize="@dimen/txtSize_17_sp"                 
                android:text="@string/service_exchange" />       
        </LinearLayout>
      
      </RelativeLayout>
   </LinearLayout>

</LinearLayout>
