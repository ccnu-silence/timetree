<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <include layout="@layout/header_layout"/>
     <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_marginTop="@dimen/dimen_1_dip"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20_dip"   android:gravity="center" android:text="扫一扫以下的二维码即可下载APP" android:textSize="@dimen/txtSize_17_sp"  android:textColor="#585858"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:layout_marginTop="@dimen/dimen_10_dip" android:layout_marginBottom="@dimen/dimen_10_dip">
    	<ImageView  android:id="@+id/me_share_bariv"  android:layout_width="@dimen/dimen_180_dip" android:layout_height="@dimen/dimen_180_dip"  android:src="@drawable/ic_launcher" />
	</LinearLayout>
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="转发到微信或发短信将APP分享给朋友" android:layout_marginLeft="@dimen/dimen_10_dip" android:layout_marginRight="@dimen/dimen_10_dip" android:textSize="@dimen/txtSize_17_sp" android:textColor="@color/black" android:gravity="center"/>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:layout_marginTop="@dimen/dimen_5_dip" android:layout_marginLeft="@dimen/dimen_10_dip" android:layout_marginRight="@dimen/dimen_10_dip" android:background="@drawable/commont_white_button">
	   <TextView android:id="@+id/me_share_tv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lineSpacingExtra="@dimen/dimen_3_dip"   android:textSize="@dimen/txtSize_14_sp"  android:textColor="#585858" android:paddingLeft="@dimen/dimen_5_dip" android:paddingRight="@dimen/dimen_5_dip" android:paddingTop="@dimen/dimen_5_dip"/>
	   <TextView android:id="@+id/me_share_httptv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text=""   android:textSize="@dimen/txtSize_14_sp" android:padding="@dimen/dimen_5_dip" android:textColor="#777fff"/>
	</LinearLayout>
	
	
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="right" android:orientation="horizontal" android:layout_marginTop="@dimen/dimen_15_dip" android:layout_marginBottom="@dimen/dimen_10_dip" android:gravity="center">
	   
	    <LinearLayout  android:layout_width="@dimen/dimen_121_dip" android:layout_height="wrap_content" android:gravity="center" android:orientation="horizontal" android:layout_marginRight="@dimen/dimen_10_dip"  android:background="@drawable/me_share_green" android:id="@+id/ll_share_wexin">
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="分享至"  android:textSize="@dimen/txtSize_18_sp"  android:textColor="@color/white"/>
	        <ImageView android:layout_marginLeft="@dimen/dimen_5_dip" android:layout_width="@dimen/dimen_33_dip" android:layout_height="@dimen/dimen_33_dip" android:src="@drawable/me_share_weixin"/>
	   </LinearLayout>
	</RelativeLayout>
	 </LinearLayout>
   </ScrollView>
</LinearLayout>
