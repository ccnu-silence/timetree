<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="horizontal" >  

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_56_dip" >

    <ProgressBar
        android:id="@+id/pg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45_dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_14_dip"
        android:layout_toLeftOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_76_dip"
        android:gravity="center_vertical"
        android:text="正在加载..."
        android:textColor="@color/border_color_light_grey"
        android:textSize="@dimen/txtSize_17_sp" />

</RelativeLayout>

</LinearLayout>  
