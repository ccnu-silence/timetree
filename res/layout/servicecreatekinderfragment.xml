<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_grey"
    android:orientation="vertical" >
    
     <ScrollView 
       android:id="@+id/group_sc"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" 
       >

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >
           
      <RelativeLayout
          android:layout_width="match_parent"
          android:visibility="gone"
          android:layout_height="@dimen/dimen_60_dip">
          <TextView
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:lineSpacingExtra="@dimen/dimen_3_dip"
              android:text="@string/realname_instructions"
              android:gravity="center_vertical"
              android:textColor="@color/purple"
              android:textSize="@dimen/txtSize_16_sp"
              android:id="@+id/textView8"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true" />
          </RelativeLayout>



     <LinearLayout android:layout_marginTop="@dimen/dimen_20_dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" >

         <RelativeLayout android:id="@+id/createkind_locationrl" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
             <TextView android:id="@+id/createkind_locationtv" android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content"
                 android:hint="@string/creat_account_kindergaten_area"
                 android:gravity="center_vertical"
                 android:layout_marginLeft="@dimen/dimen_11_dip"
                 android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />
             <ImageView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="@dimen/dimen_11_dip"  android:layout_centerVertical="true" android:src="@drawable/arrow_right"/>

         </RelativeLayout>

         <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" >
             <RelativeLayout android:id="@+id/createkind_namerl"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
                 <EditText android:id="@+id/createkind_nametv"
                     android:hint="幼儿园名字"  android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:minWidth="@dimen/dimen_80_dip" android:layout_alignParentRight="true"     android:layout_centerVertical="true"   android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp" android:background="@null"
                     android:layout_alignParentLeft="true"
                     android:paddingLeft="@dimen/dimen_11_dip"
                     android:layout_alignParentStart="true" />
                 <View style="@style/viewlinestyle" android:layout_alignParentTop="true"/>
             </RelativeLayout>
             <View style="@style/viewlinestyle"/>
             <RelativeLayout android:id="@+id/createkind_contactpeoplerl" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
                 <EditText android:id="@+id/createkind_contactpeopletv" android:maxLength="10"
                     android:hint="@string/createkinderfragment_input_realname_hint" android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:minWidth="@dimen/dimen_80_dip"  android:layout_alignParentRight="true"     android:layout_centerVertical="true"   android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp" android:background="@null"
                     android:layout_alignParentLeft="true"
                     android:paddingLeft="@dimen/dimen_11_dip"
                     android:layout_alignParentStart="true" />
             </RelativeLayout>
             <View style="@style/viewlinestyle"/>
         </LinearLayout>




         <View style="@style/viewlinestyle"/>
           
        <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/dimen_51_dip"
             android:visibility="gone"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/dimen_11_dip"
                 android:textColor="@color/black"
                 android:text="@string/set_addcode"
                 android:textSize="@dimen/txtSize_16_sp" />
            
                <LinearLayout 
                 android:layout_width="@dimen/dimen_slip64_dip"
                 android:layout_height="@dimen/dimen_slip33_dip"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:gravity="right|center_vertical"
                  >

               <com.yey.kindergaten.widget.SlipButton
                 android:id="@+id/slipButton"
                 android:layout_marginRight="@dimen/dimen_30_dip"
                 android:layout_width="@dimen/dimen_slip64_dip"
                 android:layout_height="@dimen/dimen_slip33_dip"
                />
               </LinearLayout>
         </RelativeLayout>
         
      <LinearLayout android:id="@+id/createkind_codely" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <RelativeLayout  android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/listview_select_item">
          <TextView android:id="@+id/createkind_code" android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content" android:layout_alignParentLeft="true"   android:layout_centerVertical="true" android:gravity="center_vertical" android:layout_marginLeft="@dimen/dimen_11_dip" android:textColor="@color/black" android:textSize="@dimen/txtSize_16_sp"/>
          <EditText android:id="@+id/createkind_codetv" android:hint="@string/pleaseset_addcode" android:maxLength="10" android:layout_toRightOf="@id/createkind_code" android:layout_marginLeft="@dimen/dimen_20_dip"  android:layout_height="@dimen/dimen_50_dip" android:layout_width="wrap_content"   android:layout_alignParentRight="true"     android:layout_centerVertical="true"  android:layout_marginRight="@dimen/dimen_30_dip" android:textColor="@color/contact_mainlvitemtv" android:textSize="@dimen/txtSize_16_sp" android:background="@null" android:gravity="right|center" android:minWidth="@dimen/dimen_80_dip"/>          
          </RelativeLayout>
      </LinearLayout>
    </LinearLayout>
           <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="@dimen/dimen_40_dip">
          <TextView  android:id="@+id/mecreatekinder_finish" android:layout_height="@dimen/dimen_50_dip" android:layout_width="fill_parent"   android:gravity="center" android:textColor="@color/purple" android:textSize="@dimen/txtSize_18_sp" android:text="注册幼儿园" android:background="@drawable/selector_listview_item" />
     </LinearLayout>
      </LinearLayout>
    </ScrollView>

</LinearLayout>
