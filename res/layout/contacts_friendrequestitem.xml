<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_select_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_69_dip" 
        >
         <LinearLayout
            android:id="@id/contact_friend_request_btnly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"        
            android:layout_marginRight="@dimen/dimen_11_dip"      
            android:orientation="horizontal"
           >

          
            <Button
                android:id="@id/contact_friend_request_itemaccepttv"
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_40_dip"                 
                android:textSize="@dimen/txtSize_14_sp"            
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:background="@drawable/addfriend_btn_selector"
                android:textColor="@color/contact_mainlvitemtv"                     
                android:text="@string/contacts_addfriend_accept" />
            
          
            
          <Button   
                android:id="@id/contact_friend_request_itemrefusetv"                
                android:layout_height="@dimen/dimen_40_dip"
                android:layout_width="@dimen/dimen_60_dip"    
                android:background="@drawable/addfriend_btn_selector"
                android:gravity="center"  
                android:textIsSelectable="false"
                android:layout_marginTop="@dimen/dimen_10_dip"     
                android:layout_marginLeft="@dimen/dimen_5_dip" 
                android:textSize="@dimen/txtSize_14_sp"
                android:textColor="@color/contact_mainlvitemtv"                                
                android:text="@string/contacts_addfriend_refuse" />         
        </LinearLayout>                   
  
         
           <com.yey.kindergaten.widget.CircleImageView
               android:id="@id/contact_friend_request_itemiv"
               android:layout_width="@dimen/dimen_59_dip"
               android:layout_height="@dimen/dimen_59_dip"
               android:layout_marginTop="@dimen/dimen_5_dip"
               android:layout_marginBottom="@dimen/dimen_5_dip"
               android:layout_marginLeft="@dimen/dimen_11_dip"
               android:layout_marginRight="@dimen/dimen_11_dip"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:src="@drawable/ic_launcher"
               app:border_color="@color/white"
               app:border_width="0.5dp" />
              
       
            
              <TextView
                android:id="@id/contact_friend_request_itemnametv"
                android:textSize="@dimen/txtSize_17_sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/contact_friend_request_itemiv"
                android:layout_toLeftOf="@id/contact_friend_request_btnly"
                android:layout_centerVertical="true"
                android:text="TextView" />
              
               <TextView
                android:id="@id/contact_friend_request_itemfuyantv"
                android:textSize="@dimen/txtSize_14_sp"             
                android:textColor="@color/contact_mainlvitemtv"            
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/contact_friend_request_itemiv"
                android:layout_alignParentBottom="true"
                android:text="401616请求添加你为haoyou efe"              
                />


         
     
    </RelativeLayout>  
   
         
</LinearLayout>
