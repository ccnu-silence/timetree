<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_select_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        >

        <LinearLayout        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" 
            >
          <LinearLayout        
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_78_dip" 
            android:gravity="center"          
            android:orientation="horizontal" 
            >

           <com.yey.kindergaten.widget.CircleImageView
                android:id="@+id/contact_frienditemiv"
                android:layout_marginLeft="@dimen/dimen_11_dip"                                               
                android:layout_width="@dimen/dimen_59_dip"
                android:layout_height="@dimen/dimen_59_dip"   
                app:border_width="0.5dp" 
                app:border_color="@color/white"             
                android:src="@drawable/friendicon" />
             <TextView
                android:id="@+id/contact_frienditemnametv"
                android:layout_marginLeft="@dimen/dimen_16_dip"   
                android:textSize="@dimen/txtSize_17_sp"
                android:textColor="@color/black"              
                android:layout_marginRight="@dimen/dimen_2_dip"   
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                />  
           </LinearLayout>   
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_78_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"        
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:gravity="center"
           >
            <TextView
                android:id="@+id/contact_friendphonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"         
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:textSize="@dimen/txtSize_16_sp"
                android:textColor="@color/contact_mainlvitemtv"                     
                />
            
          <Button
                android:id="@+id/contact_friendaddbt"      
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_40_dip"               
                android:gravity="center"         
                android:textSize="@dimen/txtSize_14_sp"
                android:textColor="@color/contact_mainlvitemtv"    
                android:background="@drawable/addfriend_btn_selector"                 
                android:text="@string/contacts_addfriend" />                      
           <com.yey.kindergaten.widget.CircleImageView
                android:id="@+id/arrowimage"                       
                android:layout_width="@dimen/dimen_59_dip"
                android:layout_height="@dimen/dimen_59_dip"   
                app:border_width="0.5dp" 
                app:border_color="@color/white"         
                android:src="@drawable/defaulticon" />
             <ImageView
                android:id="@+id/thearrowimage"                       
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"    
                android:visibility="gone"       
                android:src="@drawable/arrow_right" />
        </LinearLayout>          
    </RelativeLayout>
    
         <View   android:id="@id/item_view"  android:layout_marginLeft="81dip" style="@style/viewlinestyle" />
</LinearLayout>
