<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_background_grey" >
    <include layout="@layout/header_layout"/>
    <RelativeLayout android:background="@drawable/common_border_no_shadow" android:layout_marginTop="@dimen/dimen_25_dip" android:layout_width="fill_parent" android:layout_height="@dimen/dimen_53_dip" android:orientation="vertical"  android:gravity="center_vertical">
        <TextView android:id="@+id/idsafe_bangdetv" android:layout_width="wrap_content"  android:layout_height="wrap_content"
            android:text="绑定手机" android:textSize="@dimen/txtSize_16_sp"
            android:textColor="@color/base_color_text_black"
            android:layout_alignTop="@+id/show_ischecked_phone"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已验证"
            android:id="@+id/show_ischecked_phone_tv"
            android:textColor="@color/purple"
            android:textSize="@dimen/txtSize_16_sp"
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
         />

        <ImageView
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:id="@+id/show_ischecked_phone"
            android:layout_centerVertical="true"
            android:src="@drawable/checkbox_true"
            android:layout_toLeftOf="@+id/show_ischecked_phone_tv"
            android:layout_toStartOf="@+id/show_ischecked_phone_tv" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:src="@drawable/select_type_phone"
            android:layout_centerVertical="true"
            android:id="@+id/imageView6"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/change_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_53_dip"
        android:orientation="horizontal"
        android:background="@drawable/selector_listview_item">
        <ImageView
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_login_password"/>
        <TextView    android:textColor="@color/base_color_text_black"  android:id="@+id/idsafe_bangdebtn"  android:layout_width="wrap_content"  android:layout_height="@dimen/dimen_53_dip" android:layout_centerVertical="true"  android:textSize="@dimen/txtSize_16_sp" android:text="换绑手机" android:gravity="left|center_vertical" android:background="@drawable/selector_listview_item"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_arrow"
                android:layout_marginRight="@dimen/dimen_11_dip"
                android:layout_centerVertical="true"
                android:id="@+id/imageView5" />
            </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="#c5c5c5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_11_dip"
        android:layout_height="@dimen/dimen_60_dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color_text_black"
            android:text="*绑定手机账号可以帮助您找回密码或登录时光树，以上信息仅供app内部使用，不会被展示透露。"/>
        </LinearLayout>
</LinearLayout>
