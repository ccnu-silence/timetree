<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_background_grey">
    
     <LinearLayout  android:layout_marginRight="@dimen/dimen_15_dip" android:layout_marginLeft="@dimen/dimen_15_dip" android:orientation="vertical"  android:focusable="true" android:focusableInTouchMode="true" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:layout_marginTop="@dimen/dimen_15_dip" >
        <LinearLayout   android:background="@drawable/input_edittext_background" android:gravity="center" android:orientation="horizontal"  android:layout_width="fill_parent" android:layout_height="@dimen/dimen_50_dip">


            <EditText android:id="@+id/edt_bindphonefragment_phone" android:inputType="number" android:layout_width="0.0dip" android:layout_marginTop="@dimen/dimen_2_dip" android:layout_height="fill_parent" android:layout_marginLeft="0.0dip" android:layout_weight="1.0" android:singleLine="true"  android:hint="@string/et_bindphoneTips" android:textSize="@dimen/txtSize_16_sp" android:textColor="@color/light_grey_v2"  android:layout_gravity="center_vertical" android:background="@color/white" android:paddingLeft="@dimen/dimen_8_dip" android:paddingRight="@dimen/dimen_8_dip"/>
            <Button
                android:layout_marginRight="@dimen/dimen_15_dip"
                android:id="@+id/show_hide_login_btn"
                android:layout_height="@dimen/dimen_25_dip"
                android:layout_width="@dimen/dimen_40_dip"
                android:visibility="gone"
                android:background="@drawable/selector_check_phone_code"/>
       </LinearLayout>
        <LinearLayout android:visibility="gone" android:gravity="center" android:orientation="horizontal" android:background="@drawable/bg_bottom_line" android:layout_width="fill_parent" android:layout_height="@dimen/dimen_50_dip">
            <EditText android:id="@+id/ed_regester_password"  android:inputType="number" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginLeft="0.0dip" android:layout_weight="1.0" android:singleLine="true"  android:hint="@string/et_bindphoneCode" android:textSize="@dimen/txtSize_16_sp" android:textColor="@color/light_grey_v2"  android:layout_gravity="center_vertical" android:background="@color/white" android:paddingLeft="@dimen/dimen_8_dip" android:paddingRight="@dimen/dimen_8_dip"/>
            <Button   android:layout_width="0.0dip" android:layout_height="wrap_content"  android:text="@string/getcode" android:layout_weight="0.5" android:id="@+id/btn_bindphonefragment_yahnzheng" style="@style/mainBtn_yz"  android:layout_marginTop="@dimen/dimen_5_dip" android:layout_marginBottom="@dimen/dimen_5_dip" android:layout_marginRight="@dimen/dimen_10_dip"/>
       </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dimen_24.5_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSize_17_sp"
        android:textColor="#333333"
        android:text="用于登陆时使用"
        android:visibility="gone"
        android:id="@+id/text_suggest"
        android:layout_gravity="center_horizontal" />
    <Button  android:layout_marginTop="@dimen/dimen_34_dip" android:text="@string/next" android:layout_marginLeft="@dimen/dimen_15_dip" android:layout_marginRight="@dimen/dimen_15_dip" android:textColor="@color/white"  android:id="@+id/btn_bindphonefragment_bind" android:layout_width="match_parent" android:layout_height="@dimen/dimen_46_dip"   android:background="@drawable/common_btn_selector"/>
</LinearLayout>
