<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"   
                android:padding="10dp"                
        >

     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:background="@drawable/service" >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="215dp"
             android:layout_marginTop="40dp"
             android:background="@color/white"
             android:gravity="center_vertical" >

             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/textView4"
                 android:layout_alignBottom="@+id/textView4"
                 android:layout_alignRight="@+id/inflater_service_schedule_select_hour"
                 android:layout_marginRight="14dp"
                 android:text="时"
                 android:textColor="@color/grey" />

             <com.yey.kindergaten.widget.WheelView
                 android:id="@+id/inflater_service_schedule_select_hour"
                 android:layout_width="70dp"
                 android:layout_height="fill_parent"
                 android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/inflater_service__schedule_select_date" >
             </com.yey.kindergaten.widget.WheelView>

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:text="分"
                 android:textColor="@color/black"
                 android:visibility="gone" />

             <com.yey.kindergaten.widget.WheelView
                 android:id="@+id/inflater_service_schedule_select_minute"
                 android:layout_width="70dp"
                 android:layout_height="fill_parent"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/textView5" >

             </com.yey.kindergaten.widget.WheelView>
    
             <TextView
                 android:id="@+id/textView7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/textView6"
                 android:layout_alignBottom="@+id/textView6"
                 android:layout_alignRight="@+id/inflater_service_schedule_select_hour"
                 android:text="时"
                 android:textColor="@color/black" />

             <TextView
                 android:id="@+id/textView6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="16dp"
                 android:text="分"
                 android:textColor="@color/black" />

             <com.yey.kindergaten.widget.WheelView
                 android:id="@+id/inflater_service__schedule_select_date"
                 android:layout_width="130dp"
                 android:layout_height="fill_parent"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true" >
             </com.yey.kindergaten.widget.WheelView>
 <View  android:layout_width="match_parent"  android:layout_height="0.5dp" android:background="@color/border_color_light_grey"/>
         </RelativeLayout>

         <TextView
             android:id="@+id/id_show_time_select"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp"
             android:text="设置提醒时间"
             android:textColor="@color/grey"
             android:textSize="@dimen/txtSize_17_sp" />

         <TextView
             android:id="@+id/id_service_showdate_time_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="45dp"
             android:text="TextView"
             android:textColor="@color/purple"
             android:visibility="gone" />


 
   <View  android:layout_width="match_parent"  android:layout_height="0.5dp" android:background="@color/border_color_light_grey" android:layout_marginTop="255dp"/>
      <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_marginTop="259dp"
             android:orientation="horizontal"
           
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
            >
    
             <RelativeLayout
                 android:id="@+id/id_dialog_service_schedule_negtive"
                 android:layout_width="wrap_content"
                 android:layout_height="35dp"
                 android:layout_weight="0.75"
                 android:background="@drawable/btn_gry_selector_bg" >

                 <TextView
                     android:id="@+id/textView2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:text="取消"
                     android:textColor="@color/service_write_schedule_tv"
                     android:textSize="@dimen/txtSize_17_sp" />
             </RelativeLayout>
 <View  android:layout_width="20dp"  android:layout_height="42dp" android:background="@color/white"/>
             <RelativeLayout
                 android:id="@+id/id_dialog_service_schedule_positive"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0.8"
                 android:background="@drawable/btn_gry_selector_bg"
                >

                 <TextView
                     android:id="@+id/textView3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:text="确定"
                     android:textColor="@color/service_write_schedule_tv"
                     android:textSize="@dimen/txtSize_17_sp" />
             </RelativeLayout>
         </LinearLayout>

      
      
       
     </FrameLayout>

    </RelativeLayout>
 
    

</LinearLayout>
