<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/popwindowbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:background="@drawable/layout_balck_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1_dip"
            android:layout_marginTop="@dimen/dimen_1_dip"
            android:layout_marginRight="@dimen/dimen_1_dip"
            android:orientation="vertical" >
          <TextView        
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:paddingTop="@dimen/dimen_5_dip"
            android:paddingBottom="@dimen/dimen_5_dip"
            android:textColor="@color/contact_mainlvitemtv"
            android:gravity="center"
            android:textSize="@dimen/txtSize_16_sp"
            android:text="@string/contacts_addfriend_fuyan" />
        </LinearLayout>
        
        <View   
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="@color/contact_mainlvitemtv"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100_dip"
            android:orientation="vertical" >

            <EditText
                android:id="@id/contact_addfriend_fuyuanpop_fyet" 
                android:layout_height="match_parent"  
                android:layout_width="fill_parent" 
                android:paddingLeft="@dimen/dimen_2_dip"
                android:paddingRight="@dimen/dimen_2_dip"            
                android:textSize="@dimen/txtSize_16_sp"       
                android:background="@null"
                android:textColor="@color/contact_mainlvitemtv"
                >

            </EditText>

        </LinearLayout>
        
        <View   
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="@color/contact_mainlvitemtv"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            >

            <TextView
                android:id="@id/contact_addfriend_fuyuanpop_closebt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dimen_5_dip"
                android:paddingBottom="@dimen/dimen_5_dip"
                android:textSize="@dimen/txtSize_18_sp"
                android:gravity="center"     
                android:background="@drawable/contacts_popwind_selectbg"   
                android:textColor="@color/contact_mainlvitemtv"
                android:text="@string/contacts_addfriend_btnclose" />

               <View   
              android:layout_width="@dimen/dimen_1_dip"
              android:layout_height="@dimen/dimen_40_dip"
              android:background="@color/contact_mainlvitemtv"
              />
            
            
            <TextView
                android:id="@id/contact_addfriend_fuyuanpop_sendbt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/dimen_1_dip"
                android:layout_height="match_parent"     
                android:gravity="center"
                android:textColor="@color/contact_mainlvitemtv"
                android:textSize="@dimen/txtSize_18_sp"
                android:paddingTop="@dimen/dimen_5_dip"
                android:background="@drawable/contacts_popwind_selectbg"   
                android:paddingBottom="@dimen/dimen_5_dip"       
                android:text="@string/contacts_addfriend_btnsend" />
         
        </LinearLayout>
          <View   
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:background="@color/contact_mainlvitemtv"
            />

    </LinearLayout>

</LinearLayout>
