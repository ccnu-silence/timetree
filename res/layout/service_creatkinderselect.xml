<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
     <include layout="@layout/header_layout"/>
   <LinearLayout android:id="@+id/createkindly" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_vertical">
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
      <ImageView android:layout_height="@dimen/dimen_56_dip" android:layout_width="wrap_content" android:layout_marginLeft="@dimen/dimen_11_dip" android:src="@drawable/service_creatkindericon"/>
       <LinearLayout android:layout_width="fill_parent" android:layout_height="@dimen/dimen_78_dip" android:orientation="vertical" android:gravity="center_vertical">
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="@dimen/txtSize_18_sp" android:text="创建幼儿园群" android:layout_marginLeft="@dimen/dimen_5_dip"/>
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/contact_mainlvtitletv" android:textSize="@dimen/txtSize_16_sp" android:text="全国的小朋友可以通过群号查找" android:layout_marginLeft="@dimen/dimen_5_dip"/>
       </LinearLayout>
         </LinearLayout>
     <View style="@style/viewlinestyle"/>
   </LinearLayout>
   
   
    <LinearLayout android:id="@+id/createclassly" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_vertical">
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
      <ImageView android:layout_height="@dimen/dimen_56_dip" android:layout_width="wrap_content" android:layout_marginLeft="@dimen/dimen_11_dip" android:src="@drawable/service_creatclassicon"/>
       <LinearLayout android:layout_width="fill_parent" android:layout_height="@dimen/dimen_78_dip" android:orientation="vertical" android:gravity="center_vertical">
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="@dimen/txtSize_18_sp" android:text="创建班级群" android:layout_marginLeft="@dimen/dimen_5_dip"/>
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/contact_mainlvtitletv" android:textSize="@dimen/txtSize_16_sp" android:text="和同学们分享你的快乐吧" android:layout_marginLeft="@dimen/dimen_5_dip"/>
       </LinearLayout>
         </LinearLayout>
     <View style="@style/viewlinestyle"/>
   </LinearLayout>
      
      
   <LinearLayout android:id="@+id/creategenerally" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_vertical">
       <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
      <ImageView android:layout_height="@dimen/dimen_56_dip" android:layout_width="wrap_content" android:layout_marginLeft="@dimen/dimen_11_dip" android:src="@drawable/service_creatgeneralgroupicon"/>
       <LinearLayout android:layout_width="fill_parent" android:layout_height="@dimen/dimen_78_dip" android:orientation="vertical" android:gravity="center_vertical">
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="@dimen/txtSize_18_sp" android:text="创建交流群" android:layout_marginLeft="@dimen/dimen_5_dip"/>
        <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/contact_mainlvtitletv" android:textSize="@dimen/txtSize_16_sp" android:text="聚集你们的小伙伴们一起聊吧" android:layout_marginLeft="@dimen/dimen_5_dip"/>
       </LinearLayout>
         </LinearLayout>
     <View style="@style/viewlinestyle"/>
   </LinearLayout>
    
    
    
    

</LinearLayout>
